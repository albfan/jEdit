<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<!-- Apollo Guidance Computer (AGC) Assembly mode by Jim Lawton (jim DOT lawton AT gmail DOT com). -->

<MODE>

	<PROPS>
		<PROPERTY NAME="lineComment" VALUE="#" />
	</PROPS>

	<RULES HIGHLIGHT_DIGITS="TRUE" IGNORE_CASE="TRUE">
		<EOL_SPAN TYPE="COMMENT2">##</EOL_SPAN>
		<EOL_SPAN TYPE="COMMENT1">#</EOL_SPAN>

		<MARK_PREVIOUS TYPE="LABEL" MATCH_TYPE="OPERATOR"
			AT_LINE_START="TRUE">&#09;</MARK_PREVIOUS>

		<!-- Binary Operators -->
		<SEQ TYPE="OPERATOR">+</SEQ>
		<SEQ TYPE="OPERATOR">-</SEQ>

		<KEYWORDS>
			<!-- Directives -->
			<KEYWORD1>ORG</KEYWORD1> 
			<KEYWORD1>BSS</KEYWORD1> 
			<KEYWORD1>BES</KEYWORD1> 
			<KEYWORD1>SYN</KEYWORD1> 
			<KEYWORD1>EQU</KEYWORD1> 
			<KEYWORD1>DEFINE</KEYWORD1> 
			<KEYWORD1>DEC</KEYWORD1> 
			<KEYWORD1>OCT</KEYWORD1> 
			<KEYWORD1>END</KEYWORD1>

			<!-- Registers -->
			<KEYWORD3>A</KEYWORD3>
			<KEYWORD3>Q</KEYWORD3>
			<KEYWORD3>INDEX</KEYWORD3>

			<!-- Opcodes -->
			<FUNCTION>ABS</FUNCTION>
			<FUNCTION>ADD</FUNCTION> 
			<FUNCTION>ADZ</FUNCTION> 
			<FUNCTION>ALS</FUNCTION> 
			<FUNCTION>AXT</FUNCTION> 
			<FUNCTION>CLA</FUNCTION> 
			<FUNCTION>CLZ</FUNCTION> 
			<FUNCTION>COM</FUNCTION> 
			<FUNCTION>DLY</FUNCTION> 
			<FUNCTION>DVP</FUNCTION> 
			<FUNCTION>INP</FUNCTION> 
			<FUNCTION>LDQ</FUNCTION> 
			<FUNCTION>LLS</FUNCTION> 
			<FUNCTION>LRS</FUNCTION> 
			<FUNCTION>MPR</FUNCTION> 
			<FUNCTION>MPY</FUNCTION> 
			<FUNCTION>MPZ</FUNCTION> 
			<FUNCTION>OUT</FUNCTION>
			<FUNCTION>STO</FUNCTION> 
			<FUNCTION>STQ</FUNCTION> 
			<FUNCTION>SUB</FUNCTION> 
			<FUNCTION>SUZ</FUNCTION> 
			<FUNCTION>TIX</FUNCTION> 
			<FUNCTION>TMI</FUNCTION> 
			<FUNCTION>TOV</FUNCTION> 
			<FUNCTION>TRA</FUNCTION> 
			<FUNCTION>TSQ</FUNCTION> 

		</KEYWORDS>
	</RULES>
</MODE>
