/**
	Toggle on or off displaying the results of expressions (off by default).
	When show mode is on bsh will print() the value returned by each expression 
	you type on the command line.
*/

bsh.help.show = "usage: show()";

show() {
	if ( bsh.show == void )
		bsh.show = false;

	bsh.show = !bsh.show;
}
